{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build",
            "type": "shell",
            "command": "mingw32-make clean;mingw32-make epsilon-debug -j 16",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Release Build",
            "type": "shell",
            "command": "mingw32-make epsilon-release -j 16",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release Static Lib",
            "type": "shell",
            "command": "mingw32-make epsilon-static-lib-release -j 16",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Debug Static Lib",
            "type": "shell",
            "command": "mingw32-make epsilon-static-lib-debug -j 16",
            "problemMatcher": [
                "$gcc"
            ],
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "mingw32-make clean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cd \"${workspaceFolder}/bin/Release\";./Epsilon_Engine.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "none",
        }
    ]
}